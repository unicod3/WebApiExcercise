@section Scripts{

    <script src="~/scripts/app/UserClient.js"></script>
}

<div class="container" ng-app="MyApp">
    <div ng-controller="UserController">
        <h2>{{pageTitle}}</h2>

        <table class="table table-bordered table-striped table-responsive">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th> </th>
            </tr>
            <tr ng-repeat="supp in users">
                <td>{{supp.Id}}</td>
                <td>{{supp.Name}}</td>
                <td>{{supp.Email}}</td>
                <td>
                    <a class="text-primary" href="#" ng-click="edit(supp.Id)"><i class="glyphicon glyphicon-edit"></i> Edit</a>
                    <a class="text-danger" href="#" ng-click="delete(supp.Id)"><i class="glyphicon glyphicon-remove"></i> Delete</a>
                </td>
            </tr>
        </table>

        <h2>{{formTitle}}</h2>
        <form name="supplierForm" ng-submit="submitForm(User)">
            <div class="row">
                <div class="form-group col-md-4">
                    <label for="ID">ID</label>
                    <input type="text" id="ID" class="form-control" placeholder="User ID" ng-model="User.Id" disabled>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-4">
                    <label for="Name">Name</label>
                    <input type="text" id="Name" class="form-control" placeholder="User Name" ng-model="User.Name" required>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-4">
                    <label for="Email">Email</label>
                    <input type="email" id="Email" class="form-control" placeholder="User Email" ng-model="User.Email" required>
                </div>
            </div>
            <button type="submit" class="btn btn-default">Add/Update</button>
            <button type="reset" class="btn btn-default">Clear</button>
        </form>
    </div>
</div>