<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>WebApi Excercise</title>
    <!-- Bootstrap -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">

    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <link href="~/Content/ie10-viewport-bug-workaround.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="~/Content/navbar.css" rel="stylesheet">    
    <!-- Custom styles for this template -->
    <link href="~/Content/Site.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
        <div class="container">

            <!-- Static navbar -->
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("WebApi Excercise", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    <div id="navbar" class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li @if(ViewBag.MenuID ==1){ <text>class= "active"</text> }><a href="~/Home">Home</a></li>
                            <li @if(ViewBag.MenuID ==2){ <text>class= "active"</text> }><a href="~/Home/Supplier">Suppliers</a></li> 
                            <li @if(ViewBag.MenuID ==3){ <text>class= "active"</text> }><a href="~/Home/User">Users</a></li> 
                            <li @if(ViewBag.MenuID ==4){ <text>class= "active"</text> }><a href="~/Home/Product">Products</a></li> 
                            <li @if(ViewBag.MenuID ==5){ <text>class= "active"</text> }><a href="~/Home/PurchaseOrder">Purchase Order</a></li> 
                            <li @if(ViewBag.MenuID ==6){ <text>class= "active"</text> }><a href="~/Home/SalesOrder">Sales Order</a></li> 
                        </ul>
                    </div><!--/.nav-collapse -->
                </div><!--/.container-fluid -->
            </nav>

        </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year ~ WebApi Excercise ~ Sinan Ulker</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    @RenderSection("Scripts", required:false)
</body>
</html>